<p id="notice"><%= notice %></p>

<h1>Unavailabilities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Message</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unavailabilities.each do |unavailability| %>
      <tr>
        <td><%= unavailability.name %></td>
        <td><%= unavailability.start_time %></td>
        <td><%= unavailability.end_time %></td>
        <td><%= unavailability.message %></td>
        <td><%= unavailability.group %></td>
        <td><%= link_to 'Show', unavailability %></td>
        <td><%= link_to 'Edit', edit_unavailability_path(unavailability) %></td>
        <td><%= link_to 'Destroy', unavailability, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

