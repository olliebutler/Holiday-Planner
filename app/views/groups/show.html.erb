  <div class="app__column">

    <h1 style="text-align: center;"><%= @group.title.capitalize%></h1>
    <p style="text-align: center;"><%= @group.body %></p>

    <p>
      <h3>Add dates of unavailability:</h3>
    </p>

    <%= render 'unavailability' %>

    <p>
      <h3>Members:</h3>
