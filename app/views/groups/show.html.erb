<div class="app">
  <div class="app__column1">
    <%= render 'calendar' %>
  </div>

  <div class="app__column">

    <% if @group.pic.file.nil? %>
    <h1 style="text-align: center;"><%= @group.title.capitalize%></h1>
    <p style="text-align: center;"> <%= @group.body %> </p>
    <%else%>
    <%= image_tag @group.pic, class:"group_pic" %>
    <% end %>

    <%= render 'tabs' %>

    <h3>Holiday Suggestions</h3>
    <%= render 'displaycomments' %>

    <h3>Make a suggestion:</h3>
    <%= render 'comment' %>

  </div>

</body>
