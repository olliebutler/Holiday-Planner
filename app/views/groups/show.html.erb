<!DOCTYPE html>
<html>



<div class="app">
  <div class="app__column1">
    <p>
      <%= month_calendar events: @group.unavailabilities.each do |date, meetings| %>
      <%= date.day %><br><br>
      <% arr = []%>
      <% meetings.each do |meeting| %>
          <%arr << meeting.name %>
      <% end %>
      <%= arr.to_sentence %>
      <% if arr.size > 1 %>
        are unavailable
      <% elsif arr.size == 1%>
        is unavailable
      <% end %>
    <% end %>
    </p>
  </div>

  <div class="app__column">
    <div id="rs">
      <h1 style="text-align: center;"><%= @group.title %></h1>
      <p style="text-align: center;"><%= @group.body %></p>
      <p>
        <strong>Add dates of unavailability</strong>
      </p>

      <%= form_for(Unavailability.create) do  |f| %>
          <%= hidden_field_tag :group_id, @group.id%>
          <%= hidden_field_tag :name, current_user.name %>
          <%= f.label :start_date %>
          <%= f.date_select :start_time %>
          <%= f.label :end_date %>
          <%= f.date_select :end_time %>
          <%= f.submit 'Submit' %>
      <% end %>

      <p>
        <strong>Members</strong><br>
        <% @group.users.each do |user| %>
          <tr>
            <%= user.email %>
          </tr>
        <% end %>
      </p>


      <strong>Invite User</strong>


      <%= form_for(Invite.new) do  |f| %>
          <%= hidden_field_tag :group_id, @group.id %>
          <%= f.email_field :email, :placeholder => "Email Address" %>
          <%= f.submit 'Send' %>
      <% end %>

      <b><%= link_to 'Go back to groups', groups_path %></b>
    </div>
  </div>

</body>
</html>
