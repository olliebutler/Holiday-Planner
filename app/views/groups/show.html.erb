<h1><%= @group.title %></h1>
<body><%= @group.body %>
  <p>
  <strong>Title:</strong>
  <%= @group.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @group.body %>
</p>

<p>
  <strong>Members:</strong>
  <% @group.users.each do |user| %>
    <tr>
      <%= user.email %>
    </tr>
  <% end %>
</p>

<p>
  <strong>Invite:</strong>
</p>

<%= form_for(Invite.new) do  |f| %>
    <%= hidden_field_tag :group_id, @group.id %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.submit 'Send' %>
<% end %>

<b><%= link_to 'Go back to groups', groups_path %></b> |
</body>
